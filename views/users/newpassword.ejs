<%-include ("../partials/header")  -%>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3"><i class="fas fa-lock-open"></i> Reset Password</h1>
                <%-include ("../partials/messages")  -%>
                <br>
                <p>Reset password for: </p>
                <p><strong> <%= email  %> </strong></p>
                <span>If this is not your email, please do not procede.</span>
                <br>
                <form action="/users/recover/<%= token %> " method="POST">
                    <div class="form-group">
                        <label for="password">New Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>

                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>


                    <button id="btn" type="submit" class="btn btn-primary btn-block mt-4">
                        <span id="reset"> Reset </span>
                        <img id="loading" style="display:none" src="../../public/images/Spinner-1s-200px.svg" height="30px" width="30px">

                    </button>
                    <br>

                </form>
                <p class="lead mt-4">
                    No Account? <a href="/users/register">Register</a>
                </p>
            </div>
        </div>
    </div>

</div>


<script>
    const btn = document.querySelector("#btn");
    const loading = document.querySelector("#loading");
    const reset = document.querySelector("#reset");
    btn.addEventListener('click', () => {
        btn.classList.add("disabled");
        loading.style.display = "inline-block";
        reset.textContent = "Resetting password, please wait ...";
    })
</script>

<%-include ("../partials/footer")  -%>